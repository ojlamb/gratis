<% if Event.all.any? %>
  <% Event.all.each do |event| %>
    <%= link_to event.name, event_path(event) %>
    <%= link_to "Edit #{event.name}", edit_event_path(event) %>
    <%= link_to "Delete #{event.name}", event_path(event), method: :delete %>
  <% end %>
<% else %>
  <h1>No events yet</h1>
<% end %>

<a href="<%=new_event_path%>">Add an Event</a>
