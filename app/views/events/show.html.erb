<p><%= @event.name %></p>
<p><%= @event.description %></p>
<h3>Reviews for <%= @event.name %></h3>
  <% if @event.reviews.any? %>
	<ul>
	  <% @event.reviews.each do |review| %>
		<li>
		  <%= review.thoughts %>, <strong><%= review.rating %></strong>/5
		</li>
	  <% end %>
	</ul>
  <% else %>
	<p>No reviews.</p>
  <% end %>
